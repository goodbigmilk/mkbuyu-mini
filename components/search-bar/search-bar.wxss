.search-bar {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #fff;
  gap: 20rpx;
}

/* 搜索输入框包装器 */
.search-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  background: #f7f8fa;
  border-radius: 32rpx;
  padding: 0 32rpx;
  height: 64rpx;
  position: relative;
}

/* 搜索图标 */
.search-icon {
  margin-right: 16rpx;
  flex-shrink: 0;
}

/* 搜索输入框 */
.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #323233;
  height: 100%;
  line-height: 64rpx;
}

.search-placeholder {
  color: #969799;
}

/* 清除按钮 */
.clear-btn {
  padding: 8rpx;
  margin-left: 16rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 取消按钮 */
.cancel-btn {
  font-size: 28rpx;
  color: #323233;
  padding: 8rpx 0;
  flex-shrink: 0;
}

/* 搜索按钮 */
.search-btn {
  flex-shrink: 0;
}

/* 搜索建议 */
.search-suggestions {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 0 0 16rpx 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
  max-height: 400rpx;
  overflow-y: auto;
}

.suggestion-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #ebedf0;
  gap: 16rpx;
}

.suggestion-item:last-child {
  border-bottom: none;
}

.suggestion-item:active {
  background: #f7f8fa;
}

.suggestion-text {
  font-size: 28rpx;
  color: #323233;
  flex: 1;
}

/* 搜索历史 */
.search-history {
  padding: 32rpx;
  background: #fff;
  border-top: 1rpx solid #ebedf0;
}

.history-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.history-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #323233;
}

.history-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.history-tag {
  background: #f7f8fa;
  color: #646566;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 32rpx;
  line-height: 1;
}

.history-tag:active {
  background: #ebedf0;
}

/* 热门搜索 */
.hot-searches {
  padding: 32rpx;
  background: #fff;
  border-top: 1rpx solid #ebedf0;
}

.hot-header {
  margin-bottom: 24rpx;
}

.hot-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #323233;
}

.hot-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.hot-tag {
  background: #fff2e8;
  color: #ff6034;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 32rpx;
  border: 1rpx solid #ff6034;
  line-height: 1;
}

.hot-tag:active {
  background: #ff6034;
  color: #fff;
}

/* 紧凑模式 */
.search-bar.compact {
  padding: 16rpx;
}

.search-bar.compact .search-input-wrapper {
  height: 56rpx;
  padding: 0 24rpx;
}

.search-bar.compact .search-input {
  font-size: 26rpx;
  line-height: 56rpx;
}

/* 简洁模式 */
.search-bar.simple .search-input-wrapper {
  background: transparent;
  border: 1rpx solid #ebedf0;
}

/* 圆角模式 */
.search-bar.rounded .search-input-wrapper {
  border-radius: 16rpx;
}

/* 聚焦状态 */
.search-input-wrapper.focused {
  background: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 响应式设计 */
@media (max-width: 375px) {
  .search-bar {
    padding: 16rpx;
  }
  
  .search-input-wrapper {
    height: 56rpx;
    padding: 0 24rpx;
  }
  
  .search-input {
    font-size: 26rpx;
    line-height: 56rpx;
  }
} 