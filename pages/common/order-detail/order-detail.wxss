/* pages/common/order-detail/order-detail.wxss */

.container {
  min-height: 100vh;
  background-color: #f7f8fa;
  padding-bottom: 140rpx;
}

/* 加载状态 */
.loading-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

/* 空状态 */
.empty-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

/* 订单详情 */
.order-detail {
  padding: 20rpx;
}

/* 订单状态卡片 */
.status-card {
  background: white;
  border-radius: 12rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(50, 50, 51, 0.06);
}

.status-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.status-text {
  margin-left: 20rpx;
  flex: 1;
}

.status-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #323233;
  display: block;
  margin-bottom: 8rpx;
}

.countdown-text {
  font-size: 26rpx;
  color: #ff6d00;
  font-weight: 500;
}

.order-info {
  border-top: 1rpx solid #ebedf0;
  padding-top: 30rpx;
}

.order-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.order-item:last-child {
  margin-bottom: 0;
}

.order-item .label {
  font-size: 28rpx;
  color: #646566;
  width: 140rpx;
  flex-shrink: 0;
}

.order-item .value {
  font-size: 28rpx;
  color: #323233;
  flex: 1;
  margin-right: 10rpx;
}

/* 区块样式 */
.products-section,
.amount-section,
.remark-section {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(50, 50, 51, 0.06);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #ebedf0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #323233;
}

.item-count {
  font-size: 26rpx;
  color: #969799;
}

/* 商品列表 */
.product-list {
  display: flex;
  flex-direction: column;
}

.product-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f7f8fa;
  transition: background-color 0.3s ease;
}

.product-item:last-child {
  border-bottom: none;
}

.product-item:active {
  background-color: #f7f8fa;
}

/* 商品图片 */
.product-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 8rpx;
  overflow: hidden;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.product-image image {
  width: 100%;
  height: 100%;
  background-color: #f7f8fa;
}

/* 商品信息 */
.product-info {
  flex: 1;
  margin-right: 20rpx;
}

.product-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #323233;
  line-height: 1.4;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.product-subtitle {
  font-size: 26rpx;
  color: #646566;
  line-height: 1.4;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.product-tags {
  margin-bottom: 12rpx;
}

.product-tags .van-tag {
  margin-right: 8rpx;
  margin-bottom: 8rpx;
}

.product-price-quantity {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.product-price {
  font-size: 30rpx;
  font-weight: 600;
  color: #ee0a24;
}

.product-quantity {
  font-size: 26rpx;
  color: #646566;
}

/* 商品小计 */
.product-total {
  display: flex;
  align-items: center;
  flex-shrink: 0;
}

.product-total .total-price {
  font-size: 30rpx;
  font-weight: 600;
  color: #323233;
}

/* 费用明细 */
.amount-list {
  display: flex;
  flex-direction: column;
}

.amount-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
}

.amount-item.total {
  padding-top: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.amount-label {
  font-size: 28rpx;
  color: #646566;
}

.amount-value {
  font-size: 28rpx;
  color: #323233;
}

.amount-value.discount {
  color: #ee0a24;
}

.amount-value.total-price {
  color: #ee0a24;
  font-size: 32rpx;
  font-weight: 600;
}

/* 订单备注 */
.remark-content {
  font-size: 28rpx;
  color: #646566;
  line-height: 1.6;
  background-color: #f7f8fa;
  padding: 20rpx;
  border-radius: 8rpx;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #ebedf0;
  box-shadow: 0 -4rpx 12rpx rgba(50, 50, 51, 0.06);
  z-index: 100;
}

.action-buttons {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.action-buttons .van-button {
  min-width: 180rpx;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.action-buttons .van-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.cancel-btn {
  border-color: #c8c9cc !important;
  color: #646566 !important;
  background: linear-gradient(135deg, #f7f8fa 0%, #ebedf0 100%) !important;
}

.cancel-btn:active {
  background: linear-gradient(135deg, #ebedf0 0%, #dcdee0 100%) !important;
}

.pay-btn {
  background: linear-gradient(135deg, #ff6d00 0%, #ff8f00 100%) !important;
  border: none !important;
  color: white !important;
}

.pay-btn:active {
  background: linear-gradient(135deg, #e65100 0%, #f57c00 100%) !important;
}

.confirm-btn {
  background: linear-gradient(135deg, #07c160 0%, #00d4aa 100%) !important;
  border: none !important;
  color: white !important;
}

.confirm-btn:active {
  background: linear-gradient(135deg, #00a854 0%, #00b894 100%) !important;
}

/* 支付弹窗 */
.payment-modal {
  width: 100%;
}

.modal-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #323233;
  display: block;
  margin-bottom: 16rpx;
}

.modal-amount {
  font-size: 48rpx;
  font-weight: 600;
  color: #ee0a24;
}

.payment-icon {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.disabled-cell {
  opacity: 0.5;
}

.modal-actions {
  margin-top: 40rpx;
}

/* 响应式适配 */
@media screen and (max-width: 375px) {
  .status-card,
  .products-section,
  .amount-section,
  .remark-section {
    padding: 24rpx;
  }
  
  .product-image {
    width: 120rpx;
    height: 120rpx;
  }
  
  .product-name {
    font-size: 28rpx;
  }
  
  .status-title {
    font-size: 32rpx;
  }
}

/* 动画效果 */
.status-card,
.products-section,
.amount-section,
.remark-section {
  animation: slideInUp 0.3s ease-out;
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 状态指示器动画 */
.status-info .van-icon {
  animation: fadeIn 0.5s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: scale(0.8);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

/* 倒计时文字跳动效果 */
.countdown-text {
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.7;
  }
} 