.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 欢迎区域 */
.welcome-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
  color: white;
}

.welcome-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.shop-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.shop-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
}

.shop-details {
  flex: 1;
}

.shop-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.shop-status {
  display: flex;
  align-items: center;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.status-dot.open {
  background: #4CAF50;
}

.status-dot.closed {
  background: #FF5722;
}

.status-text {
  font-size: 24rpx;
  opacity: 0.9;
}

.quick-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 数据统计 */
.stats-section {
  background: white;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.stat-item {
  text-align: center;
  padding: 30rpx 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  position: relative;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.stat-change {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  gap: 4rpx;
}

.stat-change.positive {
  color: #4CAF50;
}

.stat-change.negative {
  color: #FF5722;
}

/* 图表区域 */
.chart-section {
  background: white;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.chart-tabs {
  display: flex;
  gap: 20rpx;
}

.chart-tab {
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
}

.chart-tab.active {
  background: #1989fa;
  color: white;
}

.chart-container {
  min-height: 200rpx;
}

.chart-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 200rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  color: #666;
  font-size: 24rpx;
}

.chart-summary {
  margin-top: 16rpx;
  font-size: 20rpx;
  color: #999;
}

/* 待处理事务 */
.pending-section {
  background: white;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.pending-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.pending-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.pending-item:active {
  background: #f0f0f0;
}

.pending-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.pending-icon.orders {
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
}

.pending-icon.refunds {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
}

.pending-icon.stock {
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
}

.pending-icon.reviews {
  background: linear-gradient(135deg, #d299c2 0%, #fef9d7 100%);
}

.pending-content {
  flex: 1;
}

.pending-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
}

.pending-desc {
  font-size: 24rpx;
  color: #666;
}

.pending-count {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4444;
  margin-right: 16rpx;
}

/* 快捷操作 */
.shortcuts-section {
  background: white;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.shortcuts-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30rpx;
}

.shortcut-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 10rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.shortcut-item:active {
  background-color: #f8f9fa;
  transform: scale(0.95);
}

.shortcut-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
}

.shortcut-label {
  font-size: 24rpx;
  color: #333;
  text-align: center;
}

/* 最新动态 */
.activity-section {
  background: white;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.activity-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.activity-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.activity-time {
  font-size: 20rpx;
  color: #999;
  white-space: nowrap;
  margin-right: 20rpx;
  margin-top: 4rpx;
}

.activity-content {
  flex: 1;
}

.activity-title {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.activity-desc {
  font-size: 22rpx;
  color: #666;
}

.activity-type {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  color: white;
  margin-left: 16rpx;
  background: #1989fa;
}

.empty-activity {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
}

/* 底部间距 */
.bottom-space {
  height: calc(100rpx + env(safe-area-inset-bottom));
} 