/* 整体容器 */
.categories-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 100rpx;
}

/* 搜索和筛选区域 */
.header {
  background-color: #fff;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}

.search-section {
  padding: 0 24rpx;
}

.filter-section {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
}

/* 新增：视图控制按钮 */
.view-controls {
  display: flex;
  gap: 12rpx;
  align-items: center;
}

/* 树形展示相关样式 */
.category-tree {
  padding: 0 24rpx;
}

.category-container {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.tree-node {
  overflow: hidden;
}

/* 分类列表项 - 树形展示样式 */
.category-tree .category-item {
  border-bottom: 2rpx solid #f0f0f0;
  transition: background-color 0.2s;
  background-color: transparent;
  border-radius: 0;
  margin-bottom: 0;
}

.category-tree .category-item:last-child {
  border-bottom: none;
}

.category-tree .category-item:active {
  background-color: #f8f9fa;
  transform: none;
  opacity: 1;
}

.category-content {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  position: relative;
}

/* 层级缩进 */
.level-indent {
  flex-shrink: 0;
}

/* 展开按钮样式 */
.expand-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 56rpx;
  height: 56rpx;
  margin-right: 16rpx;
  border-radius: 50%;
  background-color: #f8f9fa;
  border: 2rpx solid #e8e9ea;
  transition: all 0.2s ease;
  cursor: pointer;
}

.expand-btn:hover {
  background-color: #e8f3ff;
  border-color: #1989fa;
}

.expand-btn:active {
  background-color: #d4edda;
  transform: scale(0.95);
}

.expand-btn van-icon {
  transition: transform 0.2s ease;
}

.expand-placeholder {
  width: 56rpx;
  margin-right: 16rpx;
}

/* 层级样式 */
.level-1 {
  background-color: #fff;
}

.level-1 .category-name {
  font-weight: 600;
  font-size: 32rpx;
}

.level-2 {
  background-color: #fafafa;
}

.level-2 .category-name {
  font-size: 30rpx;
  color: #555;
  font-weight: 500;
}

.level-3 {
  background-color: #f5f5f5;
}

.level-3 .category-name {
  font-size: 28rpx;
  color: #666;
  font-weight: normal;
}

/* 树形展示中的分类信息样式调整 */
.category-tree .category-info {
  flex: 1;
  margin-bottom: 0;
}

.category-tree .category-header {
  margin-bottom: 12rpx;
}

.category-tree .category-desc {
  margin-bottom: 8rpx;
  font-size: 26rpx;
}

.category-tree .category-meta {
  gap: 24rpx;
}

.category-tree .category-actions {
  display: flex;
  gap: 8rpx;
  justify-content: flex-end;
  margin-left: 16rpx;
}

/* 传统分类列表样式（保留原有） */
.category-list {
  padding: 0 24rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.empty-add-btn {
  margin-top: 40rpx !important;
}

/* 分类列表项 - 传统列表样式 */
.category-list .category-item {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  transition: all 0.3s ease;
}

.category-list .category-item:active {
  transform: scale(0.98);
  opacity: 0.8;
}

.item-content {
  padding: 32rpx;
}

.category-list .category-info {
  margin-bottom: 24rpx;
}

.category-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.category-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
}

.category-badges {
  display: flex;
  gap: 12rpx;
}

.category-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.category-meta {
  display: flex;
  gap: 32rpx;
}

.meta-item {
  font-size: 24rpx;
  color: #999;
}

.category-list .category-actions {
  display: flex;
  gap: 16rpx;
  justify-content: flex-end;
}

/* 加载状态 */
.load-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.load-more-text {
  font-size: 28rpx;
  color: #999;
}

.no-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.no-more-text {
  font-size: 28rpx;
  color: #999;
}

/* 悬浮添加按钮 */
.fab-button {
  position: fixed;
  right: 40rpx;
  bottom: 120rpx;
  width: 96rpx;
  height: 96rpx;
  background-color: #1989fa;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(25, 137, 250, 0.4);
  z-index: 100;
  transition: all 0.3s ease;
}

.fab-button:active {
  transform: scale(0.9);
}

/* 表单弹窗样式 */
.form-popup {
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

.form-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 48rpx;
  border-bottom: 2rpx solid #f0f0f0;
  background-color: #fff;
}

.form-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.close-btn {
  padding: 16rpx;
  margin: -16rpx;
}

.form-content {
  flex: 1;
  padding: 24rpx 0;
}

.form-actions {
  padding: 32rpx 48rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  border-top: 2rpx solid #f0f0f0;
  background-color: #fff;
}

/* 父分类选择相关样式 */
.parent-category-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

/* 选择器样式 */
.picker-input {
  color: #333;
}

.parent-picker {
  max-height: 60vh;
  overflow-y: auto;
}

.picker-item {
  padding: 32rpx 48rpx;
  border-bottom: 2rpx solid #f0f0f0;
  transition: background-color 0.2s;
}

.picker-item:last-child {
  border-bottom: none;
}

.picker-item:active {
  background-color: #f8f9fa;
}

.picker-item.selected {
  background-color: #e3f2fd;
  color: #1989fa;
}

/* 原生输入框样式（备选方案） */
.native-input-wrapper {
  background-color: #fff;
  border: 2rpx solid #1989fa;
  border-radius: 8rpx;
  padding: 0;
}

.native-edit-input {
  width: 100%;
  padding: 16rpx 24rpx;
  font-size: 30rpx;
  color: #333;
  background-color: transparent;
  border: none;
  outline: none;
  box-sizing: border-box;
}

.native-edit-input::placeholder {
  color: #c8c9cc;
  font-size: 28rpx;
}

/* 树形展示中的原生输入框样式调整 */
.category-tree .native-edit-input {
  font-size: 30rpx;
}

.category-tree .level-2 .native-edit-input {
  font-size: 28rpx;
}

.category-tree .level-3 .native-edit-input {
  font-size: 26rpx;
}

/* 传统列表中的原生输入框样式调整 */
.category-list .native-edit-input {
  font-size: 32rpx;
}

/* 可编辑分类名称样式 */
.category-name-wrapper {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex: 1;
}

.editable-name {
  cursor: pointer;
  border-radius: 4rpx;
  padding: 4rpx 8rpx;
  transition: background-color 0.2s ease;
  border: 2rpx solid transparent;
}

.editable-name:hover {
  background-color: #f8f9fa;
  border-color: #e8e9ea;
}

.editable-name:active {
  background-color: #e3f2fd;
  border-color: #1989fa;
}

.edit-icon {
  opacity: 0.6;
  transition: opacity 0.2s ease;
}

.category-name-wrapper:hover .edit-icon {
  opacity: 1;
}

/* 内联编辑状态样式 */
.editing-name {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
}

/* 新的简化编辑输入框样式 */
.edit-input {
  flex: 1;
  padding: 16rpx 24rpx;
  font-size: 30rpx;
  color: #333;
  background-color: #fff;
  border: 2rpx solid #1989fa;
  border-radius: 8rpx;
  outline: none;
  box-sizing: border-box;
}

.edit-input::placeholder {
  color: #c8c9cc;
  font-size: 28rpx;
}

/* 树形展示中的编辑输入框样式调整 */
.category-tree .edit-input {
  font-size: 30rpx;
}

.category-tree .level-2 .edit-input {
  font-size: 28rpx;
}

.category-tree .level-3 .edit-input {
  font-size: 26rpx;
}

/* 传统列表中的编辑输入框样式调整 */
.category-list .edit-input {
  font-size: 32rpx;
}

.inline-edit-field {
  flex: 1;
  border: 2rpx solid #1989fa !important;
  border-radius: 8rpx !important;
  background-color: #fff !important;
}

.edit-actions {
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.edit-actions .van-icon {
  padding: 8rpx;
  border-radius: 50%;
  transition: background-color 0.2s ease;
  cursor: pointer;
}

.edit-actions .van-icon:active {
  background-color: rgba(0, 0, 0, 0.1);
}

/* 树形展示中的编辑样式调整 */
.category-tree .editing-name {
  margin: -8rpx 0;
}

.category-tree .inline-edit-field {
  font-size: 30rpx !important;
}

.category-tree .level-2 .inline-edit-field {
  font-size: 28rpx !important;
}

.category-tree .level-3 .inline-edit-field {
  font-size: 26rpx !important;
}

/* 传统列表中的编辑样式调整 */
.category-list .editing-name {
  margin: -12rpx 0;
}

.category-list .inline-edit-field {
  font-size: 32rpx !important;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .filter-section {
    flex-direction: column;
    gap: 16rpx;
    align-items: stretch;
  }
  
  .view-controls {
    justify-content: center;
  }
  
  .category-list .category-actions {
    flex-direction: column;
    gap: 12rpx;
  }
  
  .category-tree .category-actions {
    flex-direction: column;
    gap: 8rpx;
    align-items: flex-end;
  }
  
  .category-content {
    padding: 20rpx 24rpx;
  }
  
  .expand-btn {
    width: 48rpx;
    height: 48rpx;
    margin-right: 12rpx;
  }
  
  .expand-placeholder {
    width: 48rpx;
    margin-right: 12rpx;
  }
  
  .fab-button {
    right: 30rpx;
    bottom: 100rpx;
    width: 80rpx;
    height: 80rpx;
  }

  .editing-name {
    gap: 12rpx;
  }
  
  .edit-actions {
    gap: 8rpx;
  }
  
  .edit-actions .van-icon {
    padding: 6rpx;
  }
  
  .category-name-wrapper {
    gap: 6rpx;
  }
  
  .native-edit-input {
    font-size: 28rpx;
    padding: 12rpx 18rpx;
  }
}

/* 动画效果 */
.tree-node {
  animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 选中状态 */
.category-item.selected .category-info {
  background-color: #e3f2fd;
  border-left: 4rpx solid #1989fa;
  border-radius: 8rpx;
  padding: 12rpx;
  margin: -12rpx 0;
}

.category-item.selected .category-name {
  color: #1989fa;
  font-weight: 600;
}

/* Vant组件样式覆盖 */
.van-field__label {
  font-weight: 500 !important;
  color: #333 !important;
}

.van-field__input {
  font-size: 32rpx !important;
}

.van-button--mini {
  font-size: 24rpx !important;
  padding: 8rpx 16rpx !important;
}

.van-tag--mini {
  font-size: 20rpx !important;
}

.van-dropdown-item__content {
  max-height: 50vh !important;
} 