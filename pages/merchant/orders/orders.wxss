/* pages/merchant/orders/orders.wxss */
.order-page {
  background-color: #f8f9fa;
  height: 100vh;
  display: flex;
  flex-direction: column;
  padding-bottom: 120rpx; /* 为底部导航栏预留空间 */
}

/* 搜索栏样式 */
.search-bar {
  background-color: #fff;
  padding: 20rpx 16rpx;
  border-bottom: 1rpx solid #e9ecef;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  flex-shrink: 0;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background-color: #f8f9fa;
  border-radius: 50rpx;
  padding: 0 16rpx;
  border: 1rpx solid #e9ecef;
}

.search-input {
  flex: 1;
  height: 64rpx;
  line-height: 64rpx;
  padding: 0 12rpx;
  font-size: 26rpx;
}

.clear-btn {
  color: #adb5bd;
  font-size: 28rpx;
  padding: 0 8rpx;
  font-weight: bold;
}

.search-btn {
  color: #007aff;
  font-size: 26rpx;
  padding: 0 12rpx;
  font-weight: 500;
}

/* Tab切换样式 */
.tabs {
  background-color: #fff;
  border-bottom: 1rpx solid #e9ecef;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  flex-shrink: 0;
}

.tabs-scroll {
  white-space: nowrap;
}

.tab-list {
  display: flex;
  padding: 0 16rpx;
  min-width: max-content;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 16rpx;
  position: relative;
  min-width: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #007aff;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: linear-gradient(90deg, #007aff, #5ac8fa);
  border-radius: 2rpx;
}

.tab-title {
  font-size: 28rpx;
  font-weight: 600;
  line-height: 1.2;
  white-space: nowrap;
}

.tab-count {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  min-width: 32rpx;
  height: 32rpx;
  background: #dc3545;
  color: #fff;
  font-size: 18rpx;
  text-align: center;
  line-height: 32rpx;
  border-radius: 16rpx;
  padding: 0 6rpx;
}

/* 订单列表容器 */
.order-list-container {
  flex: 1;
  height: 0;
}

/* 订单列表样式 */
.order-list {
  padding: 16rpx;
}

.order-item {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid #f1f3f4;
  transition: all 0.3s ease;
  position: relative;
}

.order-item:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
}

/* 订单头部 - 重新设计布局 */
.order-header {
  padding: 20rpx 16rpx;
  border-bottom: 1rpx solid #f1f3f4;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
}

.order-main-info {
  width: 100%;
}

/* 订单号行 - 确保一行显示 */
.order-no-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.order-no {
  font-size: 28rpx;
  color: #212529;
  font-weight: 600;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 12rpx;
}

.order-status {
  font-size: 22rpx;
  font-weight: 600;
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
  background-color: #f8f9fa;
  color: #6c757d;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.05);
  flex-shrink: 0;
}

.order-status.status-pending {
  background: linear-gradient(135deg, #fff3e0, #ffe0b2);
  color: #f57c00;
}

.order-status.status-paid {
  background: linear-gradient(135deg, #e3f2fd, #bbdefb);
  color: #1976d2;
}

.order-status.status-shipped {
  background: linear-gradient(135deg, #e8f5e8, #c8e6c9);
  color: #388e3c;
}

.order-status.status-completed {
  background: linear-gradient(135deg, #f3e5f5, #e1bee7);
  color: #7b1fa2;
}

.order-status.status-cancelled {
  background: linear-gradient(135deg, #ffebee, #ffcdd2);
  color: #d32f2f;
}

.order-status.status-refunding {
  background: linear-gradient(135deg, #fff3e0, #ffe0b2);
  color: #f57c00;
}

.order-status.status-refunded {
  background: linear-gradient(135deg, #e8f5e8, #c8e6c9);
  color: #2e7d32;
}

/* 买家信息行 */
.buyer-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
  padding: 6rpx 0;
}

.buyer-label {
  font-size: 24rpx;
  color: #6c757d;
  margin-right: 8rpx;
  min-width: 60rpx;
  flex-shrink: 0;
}

.buyer-name {
  font-size: 26rpx;
  color: #495057;
  font-weight: 500;
  flex: 1;
  word-break: break-all;
  margin-right: 12rpx;
}

.order-time {
  font-size: 22rpx;
  color: #6c757d;
  flex-shrink: 0;
}

/* 商品数量信息行 */
.product-count-row {
  display: flex;
  align-items: center;
  padding: 6rpx 0;
  margin-bottom: 8rpx;
}

.product-count-label {
  font-size: 24rpx;
  color: #6c757d;
  margin-right: 8rpx;
  min-width: 60rpx;
  flex-shrink: 0;
}

.product-count {
  font-size: 26rpx;
  color: #495057;
  font-weight: 500;
  flex: 1;
  word-break: break-all;
}

/* 订单金额信息 - 左对齐 */
.amount-section {
  display: flex;
  align-items: center;
  padding: 6rpx 0;
}

.amount-label {
  font-size: 24rpx;
  color: #495057;
  margin-right: 8rpx;
  min-width: 80rpx;
  flex-shrink: 0;
}

.amount-value {
  font-size: 30rpx;
  color: #dc3545;
  font-weight: 700;
}

/* 订单摘要 - 只保留地址信息 */
.order-summary {
  padding: 16rpx;
  border-bottom: 1rpx solid #f1f3f4;
  background-color: #fafbfc;
}

.address-section {
  display: flex;
  flex-direction: column;
}

.address-label {
  font-size: 24rpx;
  color: #6c757d;
  margin-bottom: 6rpx;
}

.address-detail {
  font-size: 22rpx;
  color: #6c757d;
  line-height: 1.4;
  background-color: #fff;
  padding: 10rpx;
  border-radius: 6rpx;
  border: 1rpx solid #e9ecef;
  word-break: break-all;
}

/* 商家订单操作按钮 - 固定在右下角 */
.order-actions {
  position: absolute;
  bottom: 16rpx;
  right: 16rpx;
  display: flex;
  gap: 12rpx;
  z-index: 10;
}

.action-btn {
  border-radius: 32rpx;
  font-size: 22rpx !important;
  padding: 0 24rpx !important;
  height: 56rpx !important;
  line-height: 56rpx !important;
  border: 1rpx solid #dee2e6 !important;
  background-color: #fff !important;
  color: #495057 !important;
  font-weight: 500 !important;
  transition: all 0.3s ease !important;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1) !important;
  min-width: 100rpx;
  flex-shrink: 0;
}

.action-btn:active {
  transform: scale(0.95);
}

.action-btn.contact-btn {
  border-color: #28a745 !important;
  color: #28a745 !important;
}

.action-btn.ship-btn {
  border-color: #007aff !important;
  background: linear-gradient(135deg, #007aff, #5ac8fa) !important;
  color: #fff !important;
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.3) !important;
}

.action-btn.express-btn {
  border-color: #17a2b8 !important;
  color: #17a2b8 !important;
}

/* 加载状态 */
.loading-more {
  text-align: center;
  padding: 40rpx 0;
  color: #6c757d;
  font-size: 26rpx;
}

.no-more {
  text-align: center;
  padding: 40rpx 0;
  color: #adb5bd;
  font-size: 24rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 32rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #6c757d;
  margin-bottom: 40rpx;
  display: block;
  font-weight: 500;
}

.empty-btn {
  background: linear-gradient(135deg, #007aff, #5ac8fa);
  color: #fff;
  border-radius: 40rpx;
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.3);
} 