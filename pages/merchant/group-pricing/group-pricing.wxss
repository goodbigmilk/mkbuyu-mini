/* pages/merchant/group-pricing/group-pricing.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 操作栏 */
.action-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  background-color: #fff;
  margin-bottom: 16rpx;
  flex-wrap: wrap;
  gap: 16rpx;
}

.stats-info {
  display: flex;
  align-items: center;
  flex: 1;
  justify-content: center;
}

.stats-text {
  font-size: 28rpx;
  color: #666;
}

/* 批量操作 */
.batch-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 16rpx;
  width: 100%;
}

.batch-mode-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-wrap: wrap;
}

/* 定价列表 */
.price-list {
  background-color: #fff;
  margin: 0 16rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.list-header {
  display: flex;
  align-items: center;
  padding: 24rpx 16rpx;
  background-color: #f8f9fa;
  border-bottom: 1rpx solid #eee;
}

.header-item {
  font-size: 24rpx;
  color: #333;
  font-weight: 600;
  text-align: center;
}

.header-item.product {
  flex: 1.5;
  text-align: center;
}

.header-item.price {
  flex: 1.8;
  text-align: center;
}

.header-item.original {
  flex: 1.5;
  text-align: center;
}

.header-item.time {
  flex: 1.8;
}

.header-item.status {
  flex: 1;
}

.header-item.actions {
  flex: 2.4;
}

/* 定价项 */
.price-item {
  border-bottom: 1rpx solid #f0f0f0;
}

.price-item:last-child {
  border-bottom: none;
}

.price-item.disabled {
  opacity: 0.6;
}

.price-item.selected {
  background-color: #e7f4ff;
}

/* 定价选择框 */
.price-select {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  margin-right: 16rpx;
}

.item-content {
  display: flex;
  align-items: center;
  padding: 24rpx 16rpx;
  min-height: 140rpx;
}

.product-info {
  flex: 3;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.product-image-container {
  display: flex;
  justify-content: center;
  width: 100%;
  margin-bottom: 12rpx;
}

.product-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  background-color: #f0f0f0;
}

.product-details {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.product-name {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 100%;
  text-align: center;
}

.product-desc {
  font-size: 20rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 100%;
  text-align: center;
}

.price-value {
  flex: 1.8;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
}

.group-price {
  font-size: 28rpx;
  color: #ff4757;
  font-weight: 600;
  white-space: nowrap;
}

.original-price {
  flex: 1.8;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
}

.original-value {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
  display: block;
  margin-bottom: 4rpx;
  white-space: nowrap;
}

.discount-rate {
  font-size: 20rpx;
  color: #ff4757;
  background-color: #ffe8e8;
  padding: 2rpx 6rpx;
  border-radius: 4rpx;
  white-space: nowrap;
}

.time-range {
  flex: 1.8;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
}

.time-text {
  font-size: 22rpx;
  color: #666;
  display: block;
  line-height: 1.4;
}

.time-separator {
  font-size: 20rpx;
  color: #999;
  margin: 4rpx 0;
}

.price-status {
  flex: 1;
  text-align: center;
  padding: 0 8rpx;
}

.price-actions {
  flex: 2.4;
  display: flex;
  gap: 8rpx;
  justify-content: center;
  flex-wrap: wrap;
  padding: 0 8rpx;
}

/* 加载更多 */
.loading-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
  color: #999;
}

/* 对话框内容 */
.dialog-content {
  max-height: 80vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.selected-tip {
  padding: 16rpx 32rpx;
  background-color: #e7f4ff;
  color: #1989fa;
  font-size: 28rpx;
  text-align: center;
  margin-bottom: 16rpx;
}

.batch-price-form {
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 16rpx;
}

/* 商品列表 */
.product-list {
  max-height: 400rpx;
  overflow-y: auto;
}

.product-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s;
}

.product-item:last-child {
  border-bottom: none;
}

.product-item:active {
  background-color: #f5f5f5;
}

.product-item.selected {
  background-color: #e7f4ff;
}

.product-avatar {
  margin-right: 24rpx;
}

.product-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  background-color: #f0f0f0;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.product-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.product-price {
  font-size: 24rpx;
  color: #999;
}

.product-desc {
  font-size: 22rpx;
  color: #ccc;
  margin-top: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-select {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
}

.no-products {
  padding: 80rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .action-bar {
    flex-direction: column;
    align-items: stretch;
    gap: 16rpx;
  }
  
  .stats-info {
    order: -1;
    justify-content: center;
  }
  
  .price-actions {
    flex-direction: column;
    gap: 8rpx;
  }
  
  .list-header {
    font-size: 20rpx;
  }
  
  .header-item.actions,
  .price-actions {
    flex: 2.4;
  }
}

/* 固定列宽并让长名称横向滑动 */
.list-header .header-item { flex: 0 0 auto; }
.list-header .header-item.product { width: 140rpx; }
.list-header .header-item.price { width: 100rpx; }
.list-header .header-item.original { width: 120rpx; }
.list-header .header-item.time { width: 140rpx; }
.list-header .header-item.status { width: 80rpx; }
.list-header .header-item.actions { width: 150rpx; }

.item-content .product { flex: 0 0 140rpx; max-width: 140rpx; }
.item-content .price { flex: 0 0 90rpx; max-width: 90rpx; }
.item-content .original { flex: 0 0 100rpx; max-width: 100rpx; }
.item-content .time { flex: 0 0 130rpx; max-width: 130rpx; }
.item-content .status { flex: 0 0 60rpx; max-width: 60rpx; }
.item-content .actions { flex: 0 0 130rpx; max-width: 130rpx; }

.product-name-scroll { width: 100%; overflow: hidden; white-space: nowrap; }
.product-name-inner { display: inline-block; padding: 0 8rpx; white-space: nowrap; }

/* 新增的样式 - 批量定价功能增强 */

/* 定价模式选择器 */
.pricing-mode-selector {
  padding: 16rpx 0;
  margin-bottom: 16rpx;
}

.pricing-mode-selector .van-radio-group {
  display: flex;
  justify-content: center;
  gap: 40rpx;
}

/* 百分比说明提示 */
.percentage-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 12rpx 16rpx;
  margin-top: 8rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  border: 1rpx solid #e9ecef;
}

.tip-text {
  font-size: 24rpx;
  color: #6c757d;
}

/* 商品列表头部操作区 */
.product-list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  margin-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.header-left {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.header-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

.selected-count {
  font-size: 24rpx;
  color: #1989fa;
}