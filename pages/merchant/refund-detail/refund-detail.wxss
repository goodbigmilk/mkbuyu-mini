/* pages/merchant/refund-detail/refund-detail.wxss */
.refund-detail-page {
  background-color: #f8f9fa;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 状态头部 */
.status-header {
  background: linear-gradient(135deg, #4CAF50, #81C784);
  padding: 40rpx 32rpx;
  display: flex;
  align-items: center;
  color: #fff;
  position: relative;
  overflow: hidden;
}

.status-header::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20rpx;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.status-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  background: rgba(255, 255, 255, 0.2);
  flex-shrink: 0;
}

.status-icon.status-pending {
  background: rgba(255, 193, 7, 0.3);
}

.status-icon.status-approved {
  background: rgba(76, 175, 80, 0.3);
}

.status-icon.status-rejected {
  background: rgba(244, 67, 54, 0.3);
}

.status-info {
  flex: 1;
}

.status-text {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.status-desc {
  font-size: 26rpx;
  opacity: 0.9;
  line-height: 1.4;
}

/* 信息区块 */
.info-section {
  background-color: #fff;
  margin: 16rpx 16rpx 0;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  padding: 24rpx 24rpx 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #212529;
  border-bottom: 1rpx solid #f1f3f4;
  background: linear-gradient(135deg, #f8f9fa, #ffffff);
}

/* 信息列表 */
.info-list {
  padding: 8rpx 0;
}

.info-item {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  border-bottom: 1rpx solid #f8f9fa;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #6c757d;
  min-width: 120rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.info-value {
  font-size: 28rpx;
  color: #495057;
  flex: 1;
  word-break: break-all;
}

.info-value.amount {
  color: #dc3545;
  font-weight: 700;
  font-size: 30rpx;
}

/* 退款原因 */
.reason-content {
  padding: 24rpx;
  font-size: 28rpx;
  color: #495057;
  line-height: 1.6;
  word-break: break-all;
  background-color: #fafbfc;
}

/* 图片列表 */
.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  padding: 24rpx;
}

.image-item {
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s ease;
}

.image-item:active {
  transform: scale(0.95);
}

/* 用户信息 */
.user-info {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
}

.user-avatar {
  margin-right: 16rpx;
  flex-shrink: 0;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 28rpx;
  color: #212529;
  font-weight: 600;
  margin-bottom: 6rpx;
}

.user-phone {
  font-size: 24rpx;
  color: #6c757d;
}

.contact-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: #007aff;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  transition: all 0.3s ease;
}

.contact-btn:active {
  transform: scale(0.9);
  background-color: #0056b3;
}

/* 订单信息 */
.order-info {
  padding: 20rpx 24rpx;
  position: relative;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.order-no {
  font-size: 28rpx;
  color: #212529;
  font-weight: 600;
  flex: 1;
  margin-right: 12rpx;
}

.order-status {
  font-size: 22rpx;
  color: #007aff;
  background-color: #e3f2fd;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

.order-amount {
  margin-bottom: 8rpx;
}

.amount-label {
  font-size: 26rpx;
  color: #6c757d;
}

.amount-value {
  font-size: 28rpx;
  color: #495057;
  font-weight: 600;
}

.order-time {
  font-size: 24rpx;
  color: #6c757d;
  margin-bottom: 12rpx;
}

.view-order-detail {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  color: #007aff;
  font-size: 26rpx;
  gap: 8rpx;
}

/* 操作区域 */
.action-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx 16rpx;
  border-top: 1rpx solid #e9ecef;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.action-buttons {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.action-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.reject-btn {
  background: linear-gradient(135deg, #fff, #f8f9fa);
  color: #dc3545 !important;
  border: 2rpx solid #dc3545 !important;
}

.approve-btn {
  background: linear-gradient(135deg, #28a745, #20c997);
  color: #fff !important;
  box-shadow: 0 4rpx 12rpx rgba(40, 167, 69, 0.3);
}

.approve-btn:active {
  box-shadow: 0 2rpx 8rpx rgba(40, 167, 69, 0.4);
}

/* 加载和空状态 */
.loading-container,
.empty-container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
  color: #6c757d;
}

/* 状态头部不同状态的样式 */
.status-header.status-approved {
  background: linear-gradient(135deg, #28a745, #20c997);
}

.status-header.status-rejected {
  background: linear-gradient(135deg, #dc3545, #e74c3c);
}

.status-header.status-pending {
  background: linear-gradient(135deg, #ffc107, #ffb300);
}
