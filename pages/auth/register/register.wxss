page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  height: 100vh;
  overflow: hidden;
}

.register-page {
  position: relative;
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 顶部背景 */
.top-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 40vh;
  overflow: hidden;
}

/* 渐变背景 */
.bg-gradient {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #1989fa 0%, #4fc3f7 50%, #81d4fa 100%);
  opacity: 0.9;
}

.bg-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.8) 0%, rgba(118, 75, 162, 0.8) 100%);
}

/* 注册容器 */
.register-container {
  position: relative;
  z-index: 2;
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 60rpx 60rpx 40rpx 60rpx;
  overflow: hidden;
}

/* 头部 */
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
  flex-shrink: 0;
}

.logo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 注册表单 */
.register-form {
  flex: 1;
  margin-top: 20rpx;
}

/* 用户类型选择 */
.user-type-tabs {
  display: flex;
  margin-bottom: 40rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 8rpx;
  backdrop-filter: blur(10rpx);
}

.type-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 24rpx 20rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.type-tab text {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
  font-weight: 500;
}

.type-tab.active {
  background: linear-gradient(135deg, #1989fa 0%, #4fc3f7 100%);
  box-shadow: 0 4rpx 20rpx rgba(25, 137, 250, 0.3);
}

.type-tab.active text {
  color: #fff;
  font-weight: 600;
}

.type-tab .van-icon {
  font-size: 40rpx !important;
  color: #999;
  transition: color 0.3s ease;
}

.type-tab.active .van-icon {
  color: #fff !important;
}

/* 输入框组 */
.input-group {
  margin-bottom: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  flex-shrink: 0;
}

.input-group:last-of-type {
  margin-bottom: 0;
}

/* 注册输入框样式 */
.register-input {
  background: transparent !important;
  padding: 20rpx 24rpx !important;
  font-size: 28rpx !important;
  border: none !important;
}

/* 短信按钮 */
.sms-btn {
  height: 56rpx !important;
  font-size: 22rpx !important;
  border-radius: 10rpx !important;
  min-width: 120rpx !important;
}

/* 注册按钮 */
.register-btn {
  width: 100% !important;
  margin: 32rpx 0 20rpx 0 !important;
  height: 80rpx !important;
  border-radius: 20rpx !important;
  font-size: 28rpx !important;
  font-weight: 500 !important;
  box-shadow: 0 8rpx 24rpx rgba(25, 137, 250, 0.4) !important;
  flex-shrink: 0;
}

/* 底部链接 */
.bottom-links {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 8rpx;
  margin-top: 12rpx;
  flex-shrink: 0;
}

.bottom-links text {
  color: #646566;
  font-size: 24rpx;
}

.bottom-links .link {
  color: #1989fa;
  text-decoration: underline;
}

/* 协议同意 */
.agreement {
  margin-top: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  gap: 8rpx;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  flex-shrink: 0;
}

.policy-link {
  color: #fff !important;
  text-decoration: underline;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .register-container {
    padding: 50rpx 40rpx 30rpx 40rpx;
  }
  
  .register-form {
    padding: 28rpx 24rpx;
  }
  
  .header {
    margin-bottom: 30rpx;
  }
  
  .logo {
    width: 80rpx;
    height: 80rpx;
    margin-bottom: 20rpx;
  }
  
  .title {
    font-size: 36rpx;
  }
  
  .subtitle {
    font-size: 22rpx;
  }
} 