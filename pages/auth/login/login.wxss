page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

.login-page {
  position: relative;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部背景 */
.top-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 45vh;
  overflow: hidden;
}

/* 渐变背景 */
.bg-gradient {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #1989fa 0%, #4fc3f7 50%, #81d4fa 100%);
  opacity: 0.9;
}

.bg-image {
  width: 100%;
  height: 100%;
  opacity: 0.3;
}

.bg-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.8) 0%, rgba(118, 75, 162, 0.8) 100%);
}

/* 登录容器 */
.login-container {
  position: relative;
  z-index: 2;
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 80rpx 60rpx 60rpx 60rpx;
}

/* 头部 */
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
  text-align: center;
}

.logo {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 24rpx;
  border-radius: 20rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.15);
}

.title {
  font-size: 42rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
}

/* 身份选择 */
.user-type-selector {
  margin-bottom: 32rpx;
}

.type-tabs {
  display: flex;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  padding: 6rpx;
  backdrop-filter: blur(10rpx);
}

.type-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
  padding: 20rpx 12rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  color: rgba(255, 255, 255, 0.7);
}

.type-tab.active {
  background: #fff;
  color: #1989fa;
  box-shadow: 0 3rpx 10rpx rgba(0, 0, 0, 0.1);
}

.type-tab text {
  font-size: 24rpx;
  font-weight: 500;
}

/* 协议同意区域 */
.agreement-section {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  gap: 6rpx;
  margin-bottom: 32rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  backdrop-filter: blur(10rpx);
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
}

.agreement-checkbox {
  color: rgba(255, 255, 255, 0.9) !important;
}

.policy-link {
  color: #1989fa !important;
  text-decoration: underline;
}

/* 登录表单 */
.login-form {
  background: #fff;
  border-radius: 28rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
  backdrop-filter: blur(20rpx);
  margin-bottom: 32rpx;
}

.login-section {
  margin-bottom: 28rpx;
}

.input-group {
  margin-bottom: 28rpx;
  background: #f8f9fa;
  border-radius: 14rpx;
  overflow: hidden;
}

.input-group:last-child {
  margin-bottom: 0;
}

/* 自定义输入框样式 */
.login-input {
  background: transparent !important;
  padding: 20rpx 28rpx !important;
  font-size: 30rpx !important;
}

.sms-btn {
  margin-right: 12rpx !important;
  border-radius: 10rpx !important;
  font-size: 22rpx !important;
}

/* 登录按钮 */
.login-btn {
  width: 100% !important;
  margin: 40rpx 0 28rpx 0 !important;
  height: 88rpx !important;
  border-radius: 22rpx !important;
  font-size: 30rpx !important;
  font-weight: 500 !important;
  box-shadow: 0 6rpx 20rpx rgba(25, 137, 250, 0.4) !important;
}

/* 登录方式切换 */
.switch-login {
  text-align: center;
  margin-bottom: 28rpx;
}

.switch-login text {
  color: #1989fa;
  font-size: 26rpx;
  text-decoration: underline;
}

/* 底部链接 */
.bottom-links {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.link {
  color: #646566;
  font-size: 24rpx;
}

/* 微信一键登录区域 */
.wechat-login-section {
  margin-top: 0;
}

.divider {
  position: relative;
  text-align: center;
  margin-bottom: 32rpx;
}

.divider::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  height: 1rpx;
  background: rgba(255, 255, 255, 0.3);
}

.divider text {
  background: transparent;
  padding: 0 24rpx;
  color: rgba(255, 255, 255, 0.8);
  font-size: 22rpx;
}

/* 微信登录按钮 */
.wechat-login-btn {
  width: 100% !important;
  height: 88rpx !important;
  border-radius: 22rpx !important;
  font-size: 30rpx !important;
  font-weight: 500 !important;
  background: #07c160 !important;
  border-color: #07c160 !important;
  box-shadow: 0 6rpx 20rpx rgba(7, 193, 96, 0.4) !important;
}

.wechat-login-btn::after {
  border: none !important;
}

/* 客服按钮 */
.customer-service {
  position: fixed;
  bottom: 60rpx;
  right: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  backdrop-filter: blur(10rpx);
  z-index: 100;
}

.customer-service text {
  font-size: 20rpx;
  color: #646566;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .login-container {
    padding: 60rpx 40rpx 40rpx 40rpx;
  }
  
  .header {
    margin-bottom: 48rpx;
  }
  
  .logo {
    width: 80rpx;
    height: 80rpx;
  }
  
  .title {
    font-size: 36rpx;
  }
  
  .login-form {
    padding: 32rpx 24rpx;
  }
  
  .input-group {
    margin-bottom: 20rpx;
  }
  
  .agreement-section {
    font-size: 20rpx;
    padding: 16rpx;
  }
}

/* 动画效果 */
.login-container {
  animation: slideUp 0.6s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.login-form {
  animation: fadeIn 0.8s ease-out 0.2s both;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Vant组件样式覆盖 */
.van-field__control {
  color: #323233 !important;
}

.van-field__left-icon {
  color: #969799 !important;
}

.van-checkbox__icon {
  border-radius: 50% !important;
} 