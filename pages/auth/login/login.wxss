page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

.login-page {
  position: relative;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部背景 */
.top-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 45vh;
  overflow: hidden;
}

/* 渐变背景 */
.bg-gradient {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #1989fa 0%, #4fc3f7 50%, #81d4fa 100%);
  opacity: 0.9;
}

.bg-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.8) 0%, rgba(118, 75, 162, 0.8) 100%);
}

/* 登录容器 */
.login-container {
  position: relative;
  z-index: 2;
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 80rpx 60rpx 60rpx 60rpx;
}

/* 头部 */
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
  text-align: center;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.title {
  font-size: 48rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
}

/* 检查登录状态 */
.checking-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  padding: 80rpx 0;
}

.checking-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 登录选项区域 */
.login-options {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-bottom: 60rpx;
}

/* 登录信息展示 */
.login-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  margin-bottom: 60rpx;
  padding: 48rpx 32rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 32rpx;
  backdrop-filter: blur(10rpx);
}

.info-icon {
  margin-bottom: 24rpx;
}

.info-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.info-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.6;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

/* 微信登录按钮 */
.wechat-login-btn {
  width: 100% !important;
  height: 96rpx !important;
  border-radius: 24rpx !important;
  font-size: 32rpx !important;
  font-weight: 600 !important;
  margin-bottom: 32rpx !important;
  box-shadow: 0 8rpx 24rpx rgba(9, 187, 7, 0.2) !important;
  background: rgba(255, 255, 255, 0.9) !important;
  border: 2rpx solid #09bb07 !important;
  color: #09bb07 !important;
}

.wechat-login-btn::after {
  border: none !important;
}

/* 登录提示 */
.login-tips {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
}

.tip-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.5;
}

/* 协议同意区域 */
.agreement-section {
  text-align: center;
  margin-top: auto;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
}

.agreement-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.6;
}

.policy-link {
  color: #4fc3f7 !important;
  text-decoration: underline;
  font-weight: 500;
}

/* 客服按钮 */
.customer-service {
  position: fixed;
  bottom: 60rpx;
  right: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  backdrop-filter: blur(10rpx);
  z-index: 100;
}

.customer-service text {
  font-size: 20rpx;
  color: #646566;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .login-container {
    padding: 60rpx 40rpx 40rpx 40rpx;
  }
  
  .header {
    margin-bottom: 60rpx;
  }
  
  .logo {
    width: 100rpx;
    height: 100rpx;
  }
  
  .title {
    font-size: 42rpx;
  }
  
  .oauth-info {
    padding: 40rpx 24rpx;
    margin-bottom: 48rpx;
  }
  
  .info-title {
    font-size: 32rpx;
  }
  
  .oauth-login-btn {
    height: 88rpx !important;
    font-size: 30rpx !important;
  }
  
  .agreement-section {
    padding: 20rpx;
  }
  
  .agreement-text {
    font-size: 22rpx;
  }
}

/* 动画效果 */
.login-container {
  animation: slideUp 0.6s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.oauth-info {
  animation: fadeIn 0.8s ease-out 0.2s both;
}

.oauth-login-btn {
  animation: fadeIn 0.8s ease-out 0.4s both;
}

.login-tips {
  animation: fadeIn 0.8s ease-out 0.6s both;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 检查状态动画 */
.checking-section {
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.7;
  }
}

/* 密码登录表单样式 */
.password-login-form {
  width: 100%;
  margin-bottom: 40rpx;
}

.login-field {
  margin-bottom: 24rpx !important;
  background: rgba(255, 255, 255, 0.9) !important;
  border-radius: 20rpx !important;
  overflow: hidden !important;
}

.field-input {
  font-size: 28rpx !important;
  color: #333 !important;
}

/* 密码登录按钮 */
.password-login-btn {
  width: 100% !important;
  height: 96rpx !important;
  border-radius: 24rpx !important;
  font-size: 32rpx !important;
  font-weight: 600 !important;
  margin-bottom: 32rpx !important;
  box-shadow: 0 8rpx 24rpx rgba(25, 137, 250, 0.4) !important;
  background: linear-gradient(135deg, #1989fa 0%, #4fc3f7 100%) !important;
  border: none !important;
}

.password-login-btn::after {
  border: none !important;
}

/* 注册链接 */
.register-link {
  text-align: center;
  padding: 20rpx;
  margin-bottom: 24rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
}

.register-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-right: 12rpx;
}

.register-btn {
  font-size: 26rpx;
  color: #4fc3f7;
  font-weight: 600;
  text-decoration: underline;
}

/* 表单动画 */
.password-login-form {
  animation: slideInUp 0.6s ease-out;
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(60rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Casdoor 登录按钮 */
.casdoor-login-btn {
  width: 100% !important;
  height: 96rpx !important;
  border-radius: 24rpx !important;
  font-size: 32rpx !important;
  font-weight: 600 !important;
  margin-bottom: 32rpx !important;
  box-shadow: 0 8rpx 24rpx rgba(25, 137, 250, 0.3) !important;
  background: rgba(255, 255, 255, 0.9) !important;
  border: 2rpx solid #1989fa !important;
  color: #1989fa !important;
}

.casdoor-login-btn::after {
  border: none !important;
}

/* Casdoor web-view 容器 */
.casdoor-webview-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  background: #fff;
  display: flex;
  flex-direction: column;
}

.casdoor-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #ebedf0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.casdoor-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #323233;
}

.casdoor-close {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f7f8fa;
  color: #646566;
}

.casdoor-webview-container web-view {
  flex: 1;
  width: 100%;
}