/* pages/user/distribution-detail/distribution-detail.wxss */

.distribution-detail-page {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.08) 0%, rgba(118, 75, 162, 0.12) 50%, rgba(25, 137, 250, 0.06) 100%);
  min-height: 100vh;
  position: relative;
}

.distribution-detail-page::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(79, 195, 247, 0.03) 0%, rgba(129, 212, 250, 0.05) 100%);
  pointer-events: none;
  z-index: 0;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  position: relative;
  z-index: 1;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(102, 126, 234, 0.2);
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  color: #6c757d;
  font-size: 28rpx;
}

/* 主要内容 */
.main-content {
  padding: 32rpx 24rpx 120rpx;
  position: relative;
  z-index: 1;
}

/* 分账概览 */
.overview-section {
  margin-bottom: 32rpx;
}

.overview-card {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.9) 100%);
  border-radius: 20rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.12), 0 2rpx 16rpx rgba(118, 75, 162, 0.08);
  border: 1rpx solid rgba(102, 126, 234, 0.1);
  backdrop-filter: blur(10rpx);
  position: relative;
}

.overview-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #667eea, #764ba2);
  border-radius: 20rpx 20rpx 0 0;
}

.order-info, .distribution-info, .status-info, .time-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.time-info {
  margin-bottom: 0;
}

.order-label, .amount-label, .status-label, .time-label {
  font-size: 28rpx;
  color: #6c757d;
}

.order-value, .time-value {
  font-size: 28rpx;
  color: #343a40;
  font-weight: 500;
}

.amount-value {
  font-size: 36rpx;
  color: #dc3545;
  font-weight: 700;
}

.status-badge {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 600;
}

.status-badge.status-1 {
  background-color: #fff3cd;
  color: #856404;
}

.status-badge.status-2 {
  background-color: #d4edda;
  color: #155724;
}

.status-badge.status-3 {
  background-color: #f8d7da;
  color: #721c24;
}

/* 明细区域 */
.detail-section {
  margin-bottom: 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 0 8rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #212529;
}

.section-count {
  font-size: 26rpx;
  color: #6c757d;
}

/* 商品列表 */
.product-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.product-item {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.9) 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: flex-start;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.08), 0 2rpx 8rpx rgba(118, 75, 162, 0.04);
  border: 1rpx solid rgba(102, 126, 234, 0.08);
  backdrop-filter: blur(8rpx);
  transition: all 0.3s ease;
}

.product-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.1);
}

.product-image-container {
  margin-right: 20rpx;
  flex-shrink: 0;
}

.product-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  background-color: #f8f9fa;
  border: 2rpx solid rgba(255, 255, 255, 0.9);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.product-info {
  flex: 1;
  margin-right: 16rpx;
}

.product-name {
  font-size: 28rpx;
  color: #212529;
  font-weight: 500;
  margin-bottom: 12rpx;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.price-info {
  margin-bottom: 8rpx;
}

.price-row {
  display: flex;
  align-items: center;
  margin-bottom: 4rpx;
}

.price-row:last-child {
  margin-bottom: 0;
}

.price-label {
  font-size: 24rpx;
  color: #6c757d;
  min-width: 120rpx;
}

.original-price {
  font-size: 24rpx;
  color: #6c757d;
  text-decoration: line-through;
}

.privilege-price {
  font-size: 24rpx;
  color: #28a745;
  font-weight: 500;
}

.unit-distribution {
  font-size: 24rpx;
  color: #fd7e14;
  font-weight: 500;
}

.quantity-info {
  margin-top: 8rpx;
}

.quantity-text {
  font-size: 24rpx;
  color: #6c757d;
}

.distribution-amount {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: center;
  flex-shrink: 0;
}

.distribution-label {
  font-size: 22rpx;
  color: #6c757d;
  margin-bottom: 4rpx;
}

.distribution-value {
  font-size: 28rpx;
  color: #dc3545;
  font-weight: 600;
}

/* 汇总区域 */
.summary-section {
  margin-bottom: 32rpx;
}

.summary-card {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.9) 100%);
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.12), 0 2rpx 16rpx rgba(118, 75, 162, 0.08);
  border: 1rpx solid rgba(102, 126, 234, 0.1);
  backdrop-filter: blur(10rpx);
  position: relative;
}

.summary-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #28a745, #20c997);
  border-radius: 20rpx 20rpx 0 0;
}

.summary-header {
  padding: 32rpx 32rpx 24rpx;
  background: linear-gradient(135deg, rgba(40, 167, 69, 0.05) 0%, rgba(32, 201, 151, 0.03) 100%);
}

.summary-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #212529;
}

.summary-content {
  padding: 0 32rpx 32rpx;
}

.summary-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid rgba(102, 126, 234, 0.08);
}

.summary-row:last-child {
  border-bottom: none;
}

.total-row {
  padding-top: 24rpx;
  margin-top: 16rpx;
  border-top: 2rpx solid rgba(102, 126, 234, 0.15);
}

.summary-label {
  font-size: 28rpx;
  color: #495057;
}

.summary-value {
  font-size: 28rpx;
  color: #212529;
  font-weight: 500;
}

.summary-value.highlight {
  font-size: 32rpx;
  color: #dc3545;
  font-weight: 700;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.9) 100%);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.08);
  border: 1rpx solid rgba(102, 126, 234, 0.08);
}

.empty-text {
  font-size: 32rpx;
  color: #6c757d;
  margin-bottom: 15rpx;
  display: block;
  font-weight: 500;
}

.empty-desc {
  font-size: 26rpx;
  color: #adb5bd;
  display: block;
}

/* 响应式设计 */
@media screen and (max-width: 750rpx) {
  .main-content {
    padding: 24rpx 16rpx 100rpx;
  }
  
  .overview-card, .summary-card {
    padding: 32rpx 24rpx;
  }
  
  .product-item {
    padding: 20rpx;
  }
  
  .product-image {
    width: 80rpx;
    height: 80rpx;
  }
  
  .summary-header {
    padding: 24rpx;
  }
  
  .summary-content {
    padding: 0 24rpx 24rpx;
  }
}
