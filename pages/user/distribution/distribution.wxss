/* pages/user/distribution/distribution.wxss */
.distribution-page {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.08) 0%, rgba(118, 75, 162, 0.12) 50%, rgba(25, 137, 250, 0.06) 100%);
  min-height: 100vh;
  padding-bottom: env(safe-area-inset-bottom);
  position: relative;
}

.distribution-page::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(79, 195, 247, 0.03) 0%, rgba(129, 212, 250, 0.05) 100%);
  pointer-events: none;
  z-index: 0;
}

/* 顶部统计 */
.stats-section {
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.stats-card {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
}

.stats-value {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.stats-label {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 功能导航 */
.nav-section {
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

.nav-item {
  background-color: #fff;
  border-radius: 15rpx;
  padding: 25rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.nav-content {
  display: flex;
  align-items: center;
  flex: 1;
}

.nav-icon {
  font-size: 40rpx;
  margin-right: 25rpx;
}

.nav-text {
  display: flex;
  flex-direction: column;
}

.nav-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.nav-desc {
  font-size: 26rpx;
  color: #666;
}

.nav-arrow {
  font-size: 30rpx;
  color: #999;
}

/* 订单列表 */
.order-list {
  padding: 32rpx 24rpx 120rpx;
  width: 100%;
  box-sizing: border-box;
  position: relative;
  z-index: 5;
}

.list-header {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  background-color: #fff;
  border-radius: 15rpx 15rpx 0 0;
}

.list-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  padding-left: 25rpx;
}

/* 订单项 */
.order-item {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.9) 100%);
  border-radius: 20rpx;
  margin-bottom: 32rpx;
  overflow: visible;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.12), 0 2rpx 16rpx rgba(118, 75, 162, 0.08);
  border: 1rpx solid rgba(102, 126, 234, 0.1);
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  display: flex;
  flex-direction: column;
  width: 100%;
  position: relative;
  backdrop-filter: blur(10rpx);
}

.order-item:active {
  transform: translateY(2rpx) scale(0.99);
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.12), 0 1rpx 8rpx rgba(0, 0, 0, 0.08);
}

.order-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #007aff, #5ac8fa, #007aff);
  border-radius: 20rpx 20rpx 0 0;
  opacity: 0.8;
}

/* 不同状态订单的装饰条颜色 */
.order-item[data-status="1"]::before {
  background: linear-gradient(90deg, #ff9500, #ffad33, #ff9500);
}

.order-item[data-status="2"]::before {
  background: linear-gradient(90deg, #007aff, #5ac8fa, #007aff);
}

.order-item[data-status="3"]::before {
  background: linear-gradient(90deg, #34c759, #40e165, #34c759);
}

.order-item[data-status="4"]::before {
  background: linear-gradient(90deg, #8e44ad, #9b59b6, #8e44ad);
}

.order-item[data-status="5"]::before {
  background: linear-gradient(90deg, #6c757d, #adb5bd, #6c757d);
}

.order-status-corner {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  font-size: 22rpx;
  font-weight: 600;
  padding: 10rpx 18rpx;
  border-radius: 0 20rpx 0 20rpx;
  color: #fff;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
  z-index: 999;
  backdrop-filter: blur(5rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
  min-width: 60rpx;
  text-align: center;
  line-height: 1.2;
  pointer-events: none;
}

.order-status-corner.status-1 {
  background: linear-gradient(135deg, #ff9500, #ffad33);
  box-shadow: 0 2rpx 8rpx rgba(255, 149, 0, 0.3);
}

.order-status-corner.status-2 {
  background: linear-gradient(135deg, #007aff, #5ac8fa);
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.3);
}

.order-status-corner.status-3 {
  background: linear-gradient(135deg, #34c759, #40e165);
  box-shadow: 0 2rpx 8rpx rgba(52, 199, 89, 0.3);
}

.order-status-corner.status-4 {
  background: linear-gradient(135deg, #667eea, #764ba2);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.order-status-corner.status-5 {
  background: linear-gradient(135deg, #6c757d, #adb5bd);
  box-shadow: 0 2rpx 8rpx rgba(108, 117, 125, 0.3);
}

/* 客户信息 */
.order-header {
  width: 100%;
  padding: 32rpx 28rpx 20rpx;
  border-bottom: 1rpx solid rgba(102, 126, 234, 0.08);
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.02) 0%, rgba(255, 255, 255, 0.8) 50%, rgba(118, 75, 162, 0.02) 100%);
  box-sizing: border-box;
  margin-top: 12rpx;
  position: relative;
  z-index: 1;
}

.customer-info {
  display: flex;
  align-items: center;
  width: 100%;
}

.customer-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.9);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.customer-details {
  flex: 1;
  margin-right: 100rpx;
}

.customer-name {
  font-size: 30rpx;
  color: #212529;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 商品列表 */
.product-container {
  width: 100%;
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(102, 126, 234, 0.08);
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(102, 126, 234, 0.02) 50%, rgba(255, 255, 255, 0.9) 100%);
  box-sizing: border-box;
}

.product-scroll {
  width: 100%;
  height: 160rpx;
  white-space: nowrap;
}

.product-list {
  display: inline-flex;
  height: 160rpx;
  align-items: center;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.product-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  position: relative;
  flex-shrink: 0;
  width: 120rpx;
}

.product-item:last-child {
  margin-right: 24rpx;
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  background-color: #f8f9fa;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08), 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  object-fit: cover;
  border: 2rpx solid rgba(255, 255, 255, 0.9);
  transition: all 0.3s ease;
}

.product-image:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.product-quantity {
  position: absolute;
  bottom: -8rpx;
  right: -8rpx;
  font-size: 20rpx;
  color: #fff;
  background: linear-gradient(135deg, #dc3545, #e74c3c);
  padding: 4rpx 8rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 6rpx rgba(220, 53, 69, 0.3);
  font-weight: 600;
  min-width: 30rpx;
  text-align: center;
  line-height: 1;
}

/* 订单信息 */
.order-info-section {
  width: 100%;
  padding: 20rpx 28rpx;
  border-bottom: 1rpx solid rgba(102, 126, 234, 0.08);
  background: linear-gradient(135deg, rgba(118, 75, 162, 0.02) 0%, rgba(255, 255, 255, 0.9) 50%, rgba(25, 137, 250, 0.02) 100%);
  box-sizing: border-box;
}

.order-meta {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-bottom: 8rpx;
  width: 100%;
}

.order-no {
  font-size: 24rpx;
  color: #6c757d;
  margin-bottom: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.order-time {
  font-size: 24rpx;
  color: #6c757d;
}

.order-amount {
  text-align: right;
  font-size: 26rpx;
  color: #495057;
  line-height: 1.3;
  width: 100%;
}

.amount-value {
  font-size: 30rpx;
  color: #dc3545;
  font-weight: 700;
}

/* 分账状态 */
.distribution-status {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 28rpx 28rpx;
  background: linear-gradient(135deg, rgba(79, 195, 247, 0.02) 0%, rgba(255, 255, 255, 0.9) 100%);
  width: 100%;
  box-sizing: border-box;
}

.status-badge {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-weight: bold;
}

.status-badge.status-1 {
  background-color: #fff3cd;
  color: #856404;
}

.status-badge.status-2 {
  background-color: #d4edda;
  color: #155724;
}

.status-badge.status-3 {
  background-color: #f8d7da;
  color: #721c24;
}

.detail-btn {
  border-radius: 40rpx !important;
  font-size: 24rpx !important;
  padding: 0 30rpx !important;
  height: 64rpx !important;
  line-height: 64rpx !important;
  border: 1rpx solid #6c757d !important;
  background-color: #fff !important;
  color: #6c757d !important;
  font-weight: 500 !important;
  transition: all 0.3s ease !important;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05) !important;
  margin: 0 !important;
}

.detail-btn:active {
  transform: scale(0.95);
}

/* 加载和空状态 */
.loading-more,
.no-more {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 26rpx;
}

.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  background-color: #fff;
  border-radius: 15rpx;
  margin: 20rpx 0;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 15rpx;
  display: block;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  display: block;
}

/* 底部间距 */
.bottom-space {
  height: 100rpx;
}

/* 响应式设计 */
@media screen and (max-width: 750rpx) {
  .stats-card {
    padding: 20rpx 10rpx;
  }
  
  .stats-value {
    font-size: 40rpx;
  }
  
  .stats-label {
    font-size: 24rpx;
  }
  
  .order-item {
    padding: 25rpx;
  }
  
  .customer-avatar {
    width: 50rpx;
    height: 50rpx;
  }
  
  .product-image {
    width: 100rpx;
    height: 100rpx;
  }
}
