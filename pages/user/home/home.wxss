/* pages/user/home/home.wxss */
.container {
  min-height: 100vh;
  background-color: #f7f8fa;
  padding-bottom: 120rpx;
}

/* 搜索栏样式 */
.search-section {
  background: white;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

/* 轮播图样式 */
.banner-section {
  background: white;
  margin-bottom: 20rpx;
}

.banner-swiper {
  height: 320rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 分类样式 */
.category-section {
  background: white;
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
}

.category-scroll {
  width: 100%;
}

.category-list {
  display: flex;
  white-space: nowrap;
}

.category-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  margin-right: 40rpx;
  min-width: 120rpx;
}

.category-icon,
.category-icon-placeholder {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #f7f8fa;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
}

.category-icon {
  background-size: cover;
  background-position: center;
}

.category-name {
  font-size: 24rpx;
  color: #323233;
  text-align: center;
  line-height: 1.2;
}

/* 筛选栏样式 */
.filter-section {
  background: white;
  margin-bottom: 20rpx;
}

/* 商品列表区域 */
.product-section {
  padding: 0 20rpx;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0 20rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #323233;
}

.result-count {
  font-size: 26rpx;
  color: #969799;
  font-weight: normal;
}

/* 商品列表样式 */
.product-list {
  display: flex;
  flex-direction: column;
}

.product-item {
  background: white;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: flex-start;
  box-shadow: 0 2rpx 12rpx rgba(50, 50, 51, 0.06);
  transition: all 0.3s ease;
}

.product-item:active {
  background-color: #f7f8fa;
}

/* 商品图片 */
.product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  overflow: hidden;
  position: relative;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.product-image image {
  width: 100%;
  height: 100%;
  background-color: #f7f8fa;
}

.product-tag {
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  font-size: 20rpx;
  color: white;
  line-height: 1;
}

.hot-tag {
  background-color: #ff6d00;
}

.new-tag {
  background-color: #4caf50;
}

.recommend-tag {
  background-color: #9c27b0;
}

/* 商品信息 */
.product-info {
  flex: 1;
  margin-right: 20rpx;
}

.product-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #323233;
  line-height: 1.4;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.product-subtitle {
  font-size: 26rpx;
  color: #646566;
  line-height: 1.4;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.product-category {
  margin-bottom: 12rpx;
}

.product-category .van-tag {
  margin-right: 8rpx;
  margin-bottom: 8rpx;
}

.product-price-sales {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.product-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ee0a24;
}

.product-sales {
  font-size: 24rpx;
  color: #646566;
}

.product-stats {
  display: flex;
  font-size: 24rpx;
  color: #969799;
}

.product-stats text {
  margin-right: 20rpx;
}

/* 操作按钮 */
.product-action {
  display: flex;
  align-items: center;
  flex-shrink: 0;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx;
}

.load-more-text {
  color: #1989fa;
  font-size: 28rpx;
}

.no-more {
  text-align: center;
  padding: 40rpx;
  color: #c8c9cc;
  font-size: 26rpx;
}

/* 加载中心 */
.loading-center {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 1000;
}

/* 响应式适配 */
@media screen and (max-width: 375px) {
  .product-item {
    padding: 16rpx;
  }
  
  .product-image {
    width: 140rpx;
    height: 140rpx;
  }
  
  .product-name {
    font-size: 30rpx;
  }
  
  .product-price {
    font-size: 30rpx;
  }
}

/* 动画效果 */
.product-item {
  animation: slideInUp 0.3s ease-out;
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 底部间距，为tab栏留出空间 */
.container {
  padding-bottom: 120rpx;
} 