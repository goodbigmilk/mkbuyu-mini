.container {
  padding-bottom: 100rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 页面头部 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 32rpx;
  color: white;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 分组信息卡片 */
.group-info {
  margin: 24rpx 32rpx;
}

.group-card {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.group-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  color: #333;
}

.group-details {
  display: flex;
  justify-content: space-between;
}

.group-item {
  text-align: center;
}

.group-item .label {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
}

.group-item .value {
  font-size: 32rpx;
  font-weight: bold;
  color: #07c160;
}

/* 搜索和筛选 */
.search-filter {
  background: white;
  padding: 24rpx 32rpx;
  margin-bottom: 24rpx;
}

.filter-bar {
  margin-top: 24rpx;
}

.filter-item {
  display: inline-block;
}

/* 商品列表 */
.product-list {
  padding: 0 32rpx;
}

.product-item {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.product-item.selected {
  border: 2rpx solid #07c160;
  background: #f0f9ff;
}

.select-checkbox {
  margin-right: 24rpx;
  padding: 8rpx;
}

.product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
}

.product-info {
  flex: 1;
}

.product-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.product-subtitle {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 16rpx;
  line-height: 1.3;
}

.price-section {
  margin-bottom: 16rpx;
}

.group-price {
  margin-bottom: 8rpx;
}

.price-label {
  font-size: 24rpx;
  color: #666;
}

.price-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6b35;
}

.original-price {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.origin-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

.discount-rate {
  font-size: 22rpx;
  color: #ff6b35;
  background: #fff2f0;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.stock-info {
  display: flex;
  gap: 24rpx;
}

.stock-text,
.sales-text {
  font-size: 22rpx;
  color: #999;
}

.quick-buy-btn {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  width: 72rpx;
  height: 72rpx;
  background: #07c160;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

.no-more {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

.empty-state {
  padding: 120rpx 0;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 24rpx 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.selected-info {
  font-size: 28rpx;
  color: #333;
}

.action-buttons {
  flex: none;
}

/* 快速购买弹窗 */
.quick-buy-popup {
  padding: 32rpx;
  background: white;
  border-radius: 24rpx 24rpx 0 0;
}

.popup-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.popup-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.popup-product {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.popup-product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
}

.popup-product-info {
  flex: 1;
}

.popup-product-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.popup-product-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b35;
}

.quantity-selector {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
  padding: 24rpx 0;
}

.quantity-label {
  font-size: 30rpx;
  color: #333;
}

.popup-actions {
  margin-top: 32rpx;
}

.batch-qty {
  margin-top: 16rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.qty-label {
  font-size: 26rpx;
  color: #666;
}