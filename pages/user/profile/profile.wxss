.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
  color: white;
}

.user-header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.user-phone {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 8rpx;
  background: rgba(255, 255, 255, 0.15);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  display: inline-block;
  max-width: 300rpx;
}

.user-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
  opacity: 0.8;
}

/* 角色切换按钮样式 */
.role-switch-btn {
  border-color: rgba(255, 255, 255, 0.8) !important;
  color: rgba(255, 255, 255, 0.9) !important;
  background: rgba(255, 255, 255, 0.1) !important;
  font-size: 22rpx !important;
  padding: 8rpx 16rpx !important;
  border-radius: 20rpx !important;
}

.user-stats {
  display: flex;
  justify-content: space-around;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 30rpx 0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx;
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 订单快捷入口 */
.order-shortcuts {
  background: white;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-more {
  display: flex;
  align-items: center;
  color: #999;
  font-size: 24rpx;
}

.shortcuts-grid {
  display: flex;
  justify-content: space-around;
}

.shortcut-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.shortcut-icon {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.shortcut-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: #ff4444;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 10rpx;
  min-width: 20rpx;
  text-align: center;
  line-height: 1;
}

.shortcut-label {
  font-size: 24rpx;
  color: #333;
  text-align: center;
}

/* 功能菜单 */
.menu-section {
  margin: 20rpx;
}

.menu-group {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.menu-title {
  padding: 30rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-list {
  padding: 0 30rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  transition: background-color 0.3s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f8f9fa;
}

.menu-icon {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.menu-label {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.menu-extra {
  display: flex;
  align-items: center;
  color: #999;
}

.extra-text {
  font-size: 24rpx;
  margin-right: 8rpx;
}

/* 设置入口 */
.settings-section {
  background: white;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 0 30rpx;
}

/* 底部间距 */
.bottom-space {
  height: calc(100rpx + env(safe-area-inset-bottom));
}

/* 推荐码模态框样式 */
.referral-modal {
  padding: 40rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  background: white;
  border-radius: 24rpx 24rpx 0 0;
  max-height: 75vh;
  overflow-y: auto;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
  color: #333;
}

.referral-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.referral-code-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 30rpx;
  border-radius: 16rpx;
  color: white;
  position: relative;
}

.code-text {
  font-size: 32rpx;
  font-weight: bold;
  letter-spacing: 4rpx;
  flex: 1;
}

.copy-hint {
  font-size: 24rpx;
  opacity: 0.8;
  margin-left: 16rpx;
}

.referrer-info {
  background: #f8f9fa;
  padding: 30rpx;
  border-radius: 16rpx;
  border-left: 6rpx solid #667eea;
}

.referrer-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.referrer-code {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.referral-actions {
  margin-top: 40rpx;
}

/* 推荐码输入对话框样式 */
.referral-input-dialog {
  width: 600rpx;
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
}

.input-dialog-header {
  padding: 40rpx 40rpx 20rpx 40rpx;
  text-align: center;
  border-bottom: 1rpx solid #f5f5f5;
}

.input-dialog-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.input-dialog-content {
  padding: 40rpx;
}

.input-dialog-actions {
  display: flex;
  padding: 20rpx 40rpx 40rpx 40rpx;
  gap: 20rpx;
}

.cancel-btn {
  flex: 1;
}

.confirm-btn {
  flex: 1;
}

/* 推荐码卡片hover效果 */
.referral-code-card:active {
  transform: scale(0.98);
  transition: transform 0.2s ease;
}

.referrer-code:active {
  opacity: 0.7;
  transition: opacity 0.2s ease;
}

/* 角色切换按钮区域 */
.role-switch-section {
  margin-top: 20rpx;
  padding: 0 30rpx 30rpx 30rpx;
}

.switch-to-merchant-btn {
  width: 100% !important;
  border-radius: 30rpx !important;
  font-size: 28rpx !important;
  height: 88rpx !important;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
  border: none !important;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3) !important;
} 