/* pages/user/user-orders/user-orders.wxss */
.order-page {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.08) 0%, rgba(118, 75, 162, 0.12) 50%, rgba(25, 137, 250, 0.06) 100%);
  min-height: 100vh;
  position: relative;
}

.order-page::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(79, 195, 247, 0.03) 0%, rgba(129, 212, 250, 0.05) 100%);
  pointer-events: none;
  z-index: 0;
}

/* 搜索栏样式 */
.search-bar {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.9) 100%);
  padding: 24rpx 20rpx;
  border-bottom: 1rpx solid rgba(102, 126, 234, 0.1);
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.08);
  backdrop-filter: blur(10rpx);
  position: relative;
  z-index: 10;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.08) 0%, rgba(118, 75, 162, 0.05) 100%);
  border-radius: 50rpx;
  padding: 0 20rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.15);
  backdrop-filter: blur(5rpx);
}

.search-input {
  flex: 1;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 15rpx;
  font-size: 28rpx;
}

.clear-btn {
  color: #adb5bd;
  font-size: 32rpx;
  padding: 0 10rpx;
  font-weight: bold;
}

.search-btn {
  color: #007aff;
  font-size: 28rpx;
  padding: 0 15rpx;
  font-weight: 500;
}

/* Tab切换样式 */
.tabs {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(255, 255, 255, 0.85) 100%);
  border-bottom: 1rpx solid rgba(102, 126, 234, 0.1);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.08);
  backdrop-filter: blur(15rpx);
  position: relative;
  z-index: 9;
}

.tabs-scroll {
  white-space: nowrap;
}

.tab-list {
  display: flex;
  padding: 0 20rpx;
  min-width: max-content;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 28rpx 20rpx;
  position: relative;
  min-width: 140rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #667eea;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 6rpx;
  background: linear-gradient(90deg, #667eea, #764ba2);
  border-radius: 3rpx;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.tab-title {
  font-size: 30rpx;
  font-weight: 600;
  line-height: 1.2;
  white-space: nowrap;
}

/* 订单列表样式 */
.order-list {
  padding: 32rpx 24rpx 120rpx;
  width: 100%;
  box-sizing: border-box;
  position: relative;
  z-index: 5;
}

.order-item {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.9) 100%);
  border-radius: 20rpx;
  margin-bottom: 32rpx;
  overflow: visible;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.12), 0 2rpx 16rpx rgba(118, 75, 162, 0.08);
  border: 1rpx solid rgba(102, 126, 234, 0.1);
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  display: flex;
  flex-direction: column;
  width: 100%;
  position: relative;
  backdrop-filter: blur(10rpx);
}

.order-item:active {
  transform: translateY(2rpx) scale(0.99);
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.12), 0 1rpx 8rpx rgba(0, 0, 0, 0.08);
}

.order-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #007aff, #5ac8fa, #007aff);
  border-radius: 20rpx 20rpx 0 0;
  opacity: 0.8;
}

/* 不同状态订单的装饰条颜色 */
.order-item[data-status="1"]::before {
  background: linear-gradient(90deg, #ff9500, #ffad33, #ff9500);
}

.order-item[data-status="2"]::before {
  background: linear-gradient(90deg, #007aff, #5ac8fa, #007aff);
}

.order-item[data-status="3"]::before {
  background: linear-gradient(90deg, #34c759, #40e165, #34c759);
}

.order-item[data-status="4"]::before {
  background: linear-gradient(90deg, #8e44ad, #9b59b6, #8e44ad);
}

.order-item[data-status="5"]::before {
  background: linear-gradient(90deg, #6c757d, #adb5bd, #6c757d);
}

/* 右上角订单状态 */
.order-status-corner {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  font-size: 22rpx;
  font-weight: 600;
  padding: 10rpx 18rpx;
  border-radius: 0 20rpx 0 20rpx;
  color: #fff;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
  z-index: 999;
  backdrop-filter: blur(5rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
  min-width: 60rpx;
  text-align: center;
  line-height: 1.2;
  pointer-events: none;
}

.order-status-corner.status-pending {
  background: linear-gradient(135deg, #ff9500, #ffad33);
  box-shadow: 0 2rpx 8rpx rgba(255, 149, 0, 0.3);
}

.order-status-corner.status-paid {
  background: linear-gradient(135deg, #007aff, #5ac8fa);
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.3);
}

.order-status-corner.status-shipped {
  background: linear-gradient(135deg, #34c759, #40e165);
  box-shadow: 0 2rpx 8rpx rgba(52, 199, 89, 0.3);
}

.order-status-corner.status-completed {
  background: linear-gradient(135deg, #667eea, #764ba2);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.order-status-corner.status-cancelled {
  background: linear-gradient(135deg, #6c757d, #adb5bd);
  box-shadow: 0 2rpx 8rpx rgba(108, 117, 125, 0.3);
}

/* 订单头部 - 店铺信息和状态 */
.order-header {
  width: 100%;
  padding: 32rpx 28rpx 20rpx;
  border-bottom: 1rpx solid rgba(102, 126, 234, 0.08);
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.02) 0%, rgba(255, 255, 255, 0.8) 50%, rgba(118, 75, 162, 0.02) 100%);
  box-sizing: border-box;
  margin-top: 12rpx;
  position: relative;
  z-index: 1;
}

.shop-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.shop-name {
  font-size: 30rpx;
  color: #212529;
  font-weight: 600;
  flex: 1;
  margin-right: 100rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 商品容器 - 支持横向滑动 */
.product-container {
  width: 100%;
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(102, 126, 234, 0.08);
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(102, 126, 234, 0.02) 50%, rgba(255, 255, 255, 0.9) 100%);
  box-sizing: border-box;
}

.product-scroll {
  width: 100%;
  height: 160rpx;
  white-space: nowrap;
}

.product-list {
  display: inline-flex;
  height: 160rpx;
  align-items: center;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.product-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  position: relative;
  flex-shrink: 0;
  width: 120rpx;
}

.product-item:last-child {
  margin-right: 24rpx;
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  background-color: #f8f9fa;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08), 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  object-fit: cover;
  border: 2rpx solid rgba(255, 255, 255, 0.9);
  transition: all 0.3s ease;
}

.product-image:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.product-quantity {
  position: absolute;
  bottom: -8rpx;
  right: -8rpx;
  font-size: 20rpx;
  color: #fff;
  background: linear-gradient(135deg, #dc3545, #e74c3c);
  padding: 4rpx 8rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 6rpx rgba(220, 53, 69, 0.3);
  font-weight: 600;
  min-width: 30rpx;
  text-align: center;
  line-height: 1;
}

/* 订单信息区域 */
.order-info-section {
  width: 100%;
  padding: 20rpx 28rpx;
  border-bottom: 1rpx solid rgba(102, 126, 234, 0.08);
  background: linear-gradient(135deg, rgba(118, 75, 162, 0.02) 0%, rgba(255, 255, 255, 0.9) 50%, rgba(25, 137, 250, 0.02) 100%);
  box-sizing: border-box;
}

.order-meta {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-bottom: 8rpx;
  width: 100%;
}

.order-no {
  font-size: 24rpx;
  color: #6c757d;
  margin-bottom: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.order-time {
  font-size: 24rpx;
  color: #6c757d;
}

.order-amount {
  text-align: right;
  font-size: 26rpx;
  color: #495057;
  line-height: 1.3;
  width: 100%;
}

.amount-value {
  font-size: 30rpx;
  color: #dc3545;
  font-weight: 700;
}


/* 加载状态 */
.loading-more {
  text-align: center;
  padding: 50rpx 0;
  color: #6c757d;
  font-size: 28rpx;
}

.no-more {
  text-align: center;
  padding: 50rpx 0;
  color: #adb5bd;
  font-size: 26rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 150rpx 40rpx;
}

.empty-icon {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 50rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 30rpx;
  color: #6c757d;
  margin-bottom: 50rpx;
  display: block;
  font-weight: 500;
}

.empty-btn {
  background: linear-gradient(135deg, #007aff, #5ac8fa);
  color: #fff;
  border-radius: 50rpx;
  width: 240rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.3);
}
