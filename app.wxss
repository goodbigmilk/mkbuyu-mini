/**app.wxss**/
@import './styles/theme.wxss';
@import './styles/common.wxss';

/* 全局样式重置 */
page {
  background-color: #f8f8f8;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
  font-size: 28rpx;
  line-height: 1.4;
  color: #333;
}

/* 容器样式 */
.container {
  width: 100%;
  min-height: 100vh;
  background-color: #f8f8f8;
}

/* 内容区域 */
.content {
  padding: 0 24rpx;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  margin: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

/* 列表项 */
.list-item {
  background-color: #fff;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
}

.list-item:last-child {
  border-bottom: none;
}

/* 按钮样式 */
.btn {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.btn-primary {
  background-color: var(--primary-color);
  color: #fff;
}

.btn-secondary {
  background-color: #f8f8f8;
  color: #666;
}

.btn-outline {
  background-color: transparent;
  border: 2rpx solid var(--primary-color);
  color: var(--primary-color);
}

.btn-small {
  height: 64rpx;
  font-size: 28rpx;
  border-radius: 32rpx;
}

.btn-large {
  height: 96rpx;
  font-size: 36rpx;
  border-radius: 48rpx;
}

.btn-disabled {
  background-color: #f0f0f0 !important;
  color: #c0c0c0 !important;
  border-color: #f0f0f0 !important;
}

/* 输入框样式 */
.input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  font-size: 28rpx;
  background-color: #fff;
}

.input:focus {
  border-color: var(--primary-color);
}

.input-error {
  border-color: var(--error-color);
}

/* 文本样式 */
.text-primary {
  color: var(--primary-color);
}

.text-secondary {
  color: #666;
}

.text-success {
  color: var(--success-color);
}

.text-warning {
  color: var(--warning-color);
}

.text-error {
  color: var(--error-color);
}

.text-disabled {
  color: #c0c0c0;
}

/* 字体大小 */
.text-xs {
  font-size: 20rpx;
}

.text-sm {
  font-size: 24rpx;
}

.text-base {
  font-size: 28rpx;
}

