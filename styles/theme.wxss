/* 主题配置 */
:root {
  /* 主要颜色 */
  --primary-color: #1989fa;
  --primary-light: #5bb1fc;
  --primary-dark: #0d7cd9;
  
  /* 语义颜色 */
  --success-color: #07c160;
  --warning-color: #ff976a;
  --error-color: #ee0a24;
  --info-color: #1989fa;
  
  /* 文本颜色 */
  --text-primary: #323233;
  --text-secondary: #646566;
  --text-disabled: #c8c9cc;
  --text-placeholder: #969799;
  
  /* 背景颜色 */
  --bg-primary: #ffffff;
  --bg-secondary: #f7f8fa;
  --bg-disabled: #f5f5f5;
  --bg-mask: rgba(0, 0, 0, 0.7);
  
  /* 边框颜色 */
  --border-color: #ebedf0;
  --border-light: #f2f3f5;
  
  /* 间距 */
  --space-xs: 8rpx;
  --space-sm: 12rpx;
  --space-md: 16rpx;
  --space-lg: 24rpx;
  --space-xl: 32rpx;
  
  /* 字体大小 */
  --font-size-xs: 20rpx;
  --font-size-sm: 24rpx;
  --font-size-md: 28rpx;
  --font-size-lg: 32rpx;
  --font-size-xl: 36rpx;
  
  /* 圆角 */
  --border-radius-sm: 4rpx;
  --border-radius-md: 8rpx;
  --border-radius-lg: 16rpx;
  --border-radius-xl: 24rpx;
  
  /* 阴影 */
  --shadow-sm: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  --shadow-md: 0 4rpx 12rpx rgba(0, 0, 0, 0.12);
  --shadow-lg: 0 8rpx 24rpx rgba(0, 0, 0, 0.16);
  
  /* 层级 */
  --z-index-popup: 1000;
  --z-index-modal: 1100;
  --z-index-toast: 1200;
  --z-index-loading: 1300;
}

/* 深色主题 */
@media (prefers-color-scheme: dark) {
  :root {
    --text-primary: #f0f1f2;
    --text-secondary: #c9caca;
    --text-disabled: #646566;
    --text-placeholder: #4d4d4d;
    
    --bg-primary: #1d1d1f;
    --bg-secondary: #2c2c2e;
    --bg-disabled: #3a3a3c;
    
    --border-color: #3a3a3c;
    --border-light: #2c2c2e;
  }
}

/* 品牌色彩系统 */
.brand-primary {
  color: var(--primary-color);
}

.brand-success {
  color: var(--success-color);
}

.brand-warning {
  color: var(--warning-color);
}

.brand-error {
  color: var(--error-color);
}

.brand-info {
  color: var(--info-color);
}

/* 背景色彩系统 */
.bg-brand-primary {
  background-color: var(--primary-color);
}

.bg-brand-success {
  background-color: var(--success-color);
}

.bg-brand-warning {
  background-color: var(--warning-color);
}

.bg-brand-error {
  background-color: var(--error-color);
}

.bg-brand-info {
  background-color: var(--info-color);
}

/* 渐变背景 */
.gradient-primary {
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
}

.gradient-success {
  background: linear-gradient(135deg, var(--success-color), #38d971);
}

.gradient-warning {
  background: linear-gradient(135deg, var(--warning-color), #ffb366);
}

.gradient-error {
  background: linear-gradient(135deg, var(--error-color), #f54959);
}

/* 主题切换动画 */
.theme-transition {
  transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease;
} 